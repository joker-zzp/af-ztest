root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.{json,md}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
insert_final_newline = false

[*.yml]
indent_size = 2

[*.html]
indent_size = 2

[*.rs]
indent_size = 4
